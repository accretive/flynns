//- The outer shell of the arcade, wrapping everything up into a nice box.
.arcade__cabinet

  .arcade__display

    .arcade__static

    .arcade__screen

    //- The marquee is the primary container holding all the information
    //- about the arcade.
    a.arcade__marquee(ng-controller="inlineClicker" ng-click="fire($index)" href="#")

      .arcade__info
        //- The status line has the following:
        //- - Status
        //- - Favorite
        //- - Stars
        //- - Phone/HD
        //- .arcade__line.line--status.gold-show
          .arcade__status: span {{program.status.text}}
          .arcade__favorite: i.fa.fa-heart
          ul.arcade__details
            li.hd(ng-if="program.hd"): i.fa.small HD
            li.phone(ng-if="program.phone"): i.fa.fa-phone.small
            li.country {{program.country}}
            li: i.fa.fa-ellipsis-v
            li.age {{program.age}}

        //- The Name line has the following:
        //- - Name
        //- - Details
        //- - - Phone/HD
        //- - - Counrty
        //- - - Age
        //- .arcade__line.line--name
          h3.arcade__name: span(onclick=) {{program.name.text}}
          ul.arcade__details
            li.hd(ng-if="program.hd"): i.fa.small HD
            li.phone(ng-if="program.phone"): i.fa.fa-phone.small
            li.country {{program.country}}
            li: i.fa.fa-ellipsis-v
            li.age {{program.age}}

        //- Just the headline.
        //- .arcade__line.line--headline
          p.arcade__headline {{program.headline}}

        //- Another row of hearts and starts
        //- .arcade__line.line--

    .arcade__game-over
      //- img(ng-src="{{program.image.src}}")



    .controls
